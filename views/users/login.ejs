<% include('../layouts/header.ejs')  %>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link rel="stylesheet" href="/style.css ">

 <div class="text-center center-div" id="login">
    <div class="container w-15 border py-15 col-md-5 col-10">
     <div class="title pb-5 m-4">
         <h2 class="font-weight-bold">Sign In</h2>
         <% if(locals.log){%>
          <div class="alert alert-success text-center">
             <%=log %>
          </div>
          <% }%>
          <% 
          if(typeof message !== 'undefined'){
               %>
               <h6 style="color:red" ><%= message %></h6>
               <%
          }
           %>
     </div>
     <form action="/login" method="post" class="pt-3">
        <div class="form-group">
         <small class="form-text text-muted text-left ">Email</small>
         <input   required type="email" name="email" class="form-control" placeholder="Enter email here">
        </div>
        <div class="form-group">
         <small class="form-text text-muted text-left">Password</small>
         <input required  type="password" name="password" class="form-control" placeholder="Enter  your paassword">
        </div> 
        <br>
        <button  type="submit" value="Login" class="btn btn-success rounded-pill">Login</button>
     </form>
    </div>
 </div>


<% include('../layouts/footer.ejs')  %>